{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "plugin:storybook/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-confusing-arrow": 0,
    "no-return-assign": 0,
    "implicit-arrow-linebreak": 0,
    "function-paren-newline": 0
  },
  "ignorePatterns": ["dist/*", "storybook-static/*", "postcss.config.js"]
}
